<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/search_startTime"
            android:text="2015-12-12"
            android:textSize="25sp"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/search_endTime"
            android:text="2015-13-13"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="账单数目:"
            android:id="@+id/search_size"
            android:textSize="30px"
            android:background="@drawable/border"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80px" />
        <TextView
            android:text="账单金额:"
            android:textSize="30px"
            android:id="@+id/search_money"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="0dp"
            android:layout_height="80px" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_type"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/search_tagType"
            android:text="出行"
            android:enabled="false"
            android:layout_width="170px"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/search_inOrOut"
            android:text="收入"
            android:enabled="false"
            android:layout_width="152px"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/search_orderBy"
            android:text="金额"
            android:enabled="false"
            android:layout_width="220px"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="192px"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/search_orderWay"
                android:text="降序"
                android:background="#00000000"
                android:layout_width="160px"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/search_orderWayi"
                android:src="@drawable/triangledow"
                android:layout_gravity="center_vertical"
                android:layout_width="32px"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/searchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>
